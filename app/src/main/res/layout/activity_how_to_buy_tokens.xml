<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="exchange.twex.twexapp.HowToBuyTokensActivity">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="338dp"
        android:layout_height="44dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="Please be advised that in order to be accepted as a valid participant to acquire our tokens you must first:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="338dp"
        android:layout_height="27dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="72dp"
        android:text="1. Create an account on the Twex Platform, "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="338dp"
        android:layout_height="25dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="108dp"
        android:text="2. Submit your Investor Information,"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="161dp"
        android:layout_height="22dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="148dp"
        android:text="3. Are you an US citizen ?"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonUSCitizen"
        android:layout_width="88dp"
        android:layout_height="37dp"
        android:layout_marginStart="273dp"
        android:layout_marginTop="148dp"
        android:text="Yes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="195dp"
        android:layout_height="40dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="188dp"
        android:text="4. Does your country restrict investment in cryptocurrency?"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonRestrictCrypto"
        android:layout_width="88dp"
        android:layout_height="37dp"
        android:layout_marginStart="273dp"
        android:layout_marginTop="188dp"
        android:text="Yes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
